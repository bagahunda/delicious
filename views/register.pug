extends layout

block content
  .inner
    form.form(action="/register" method="POST")
      h2= title

      label(for="name" name="name") Name
      input(type="text" name="name")

      label(for="email" name="email") Email
      input(type="email" name="email")

      label(for="password" name="password") Password
      input(type="password" name="password")

      label(for="confirm-password" name="confirm-password") Confirm Password
      input(type="password" name="confirm-password")

      input.button(type="submit" value="Register")